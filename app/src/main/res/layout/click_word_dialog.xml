<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <RelativeLayout
        android:id="@+id/click_word_dl_fayin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/click_word_dl_layout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"

            android:layout_marginRight="0dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/click_word_dl_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/click_word_dl_yinbiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="serif" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/click_word_dl_layout1"
            android:layout_toRightOf="@id/click_word_dl_layout1"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/study_fayin" />


    </RelativeLayout>

    <ListView
        android:id="@+id/click_word_dl_lv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

</LinearLayout>