<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_line"
    android:orientation="vertical">

    <Button
        android:id="@+id/bn_dialog_other_Translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="翻译"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linearlayout_line_color"
        android:orientation="vertical" />

    <Button
        android:id="@+id/bn_dialog_other_Example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="例句"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linearlayout_line_color"
        android:orientation="vertical" />

    <Button
        android:id="@+id/bn_dialog_other_Article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="文章"/>

</LinearLayout>