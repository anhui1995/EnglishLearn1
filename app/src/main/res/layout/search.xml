<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#F7F6ED">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <AutoCompleteTextView
            android:id="@+id/searchEditTextEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:typeface="serif" />



        <Button
            android:id="@+id/searchButtonEmpty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Button" />

        <Button
            android:id="@+id/searchButtonSuch"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:text="搜索" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#FFFBFD"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addwordLinearLayoutBase">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="20dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="音标:"/>

                    <TextView
                        android:id="@+id/searchTextViewYinbiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:typeface="serif" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="20dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="n:"/>

                    <TextView
                        android:id="@+id/searchTextViewN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="20dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="v:"/>

                    <TextView
                        android:id="@+id/searchTextViewV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="20dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="adj:"/>

                    <TextView
                        android:id="@+id/searchTextViewAdj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="20dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="adv:"/>

                    <TextView
                        android:id="@+id/searchTextViewadv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F4F4"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="20dp"
                        android:layout_height="28dp"/>

                    <TextView
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="other:"/>

                    <TextView
                        android:id="@+id/searchTextViewOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#B2B2B2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>