<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#D6D5D4"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F7F3F2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordItemTextViewMp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Text"
                    android:textColor="#F7F3F2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordItemTextViewEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="English"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordItemTextViewMeaning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="英语"
                    android:textColor="#000000" />

            </LinearLayout>

            <Button
                android:id="@+id/worditemButtonMoer"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:text=">>"
                android:textSize="25px" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>