<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/mainLayout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来源:"/>

            <EditText
                android:layout_width="wrap_content"
                android:ems="10"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/main_et_from"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/mainLayout1"
            android:id="@+id/mainLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题:"/>

            <EditText
                android:layout_width="wrap_content"
                android:ems="10"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/main_et_title"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/mainLayout2"
            android:id="@+id/mainLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="副标题:"/>

            <EditText
                android:layout_width="wrap_content"
                android:ems="10"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/main_et_subtitle"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/mainLayout3"
            android:id="@+id/mainLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述:"/>

            <EditText
                android:layout_width="wrap_content"
                android:ems="10"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/main_et_describe"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_tv1"
            android:layout_below="@id/mainLayout4"
            android:text="英文:"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="91dp"
            android:layout_below="@id/main_tv1"
            android:id="@+id/main_et_english"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_tv3"
            android:layout_below="@id/main_et_english"
            android:text="中文:"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="100dp"
            android:layout_below="@id/main_tv3"
            android:id="@+id/main_et_chinese"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_et_chinese"
            android:text="Button"
            android:id="@+id/mainButton"/>

    </RelativeLayout>

</LinearLayout>

